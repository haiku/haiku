Preference DriveSetup :
	CreateParamsPanel.cpp
	DiskView.cpp
	DriveSetup.cpp
	InitParamsPanel.cpp
	MainWindow.cpp
	PartitionList.cpp
	Support.cpp

	: be libcolumnlistview.a libshared.a $(TARGET_LIBSUPC++)
