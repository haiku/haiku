SubDir HAIKU_TOP src bin diffutils src ;

# filter warnings we don't want here
TARGET_WARNING_CCFLAGS = [ FFilter $(TARGET_WARNING_CCFLAGS)
	: -Wall -Wmissing-prototypes -Wsign-compare ] ;

SubDirCcFlags -DHAVE_CONFIG_H  -DLOCALEDIR=\'\"/share/locale\"\' -DPR_PROGRAM=\'\"/bin/pr\"\' -DDEFAULT_DIFF_PROGRAM=\'\"diff\"\' -D__USE_GNU ;
SubDirSysHdrs [ FDirName $(SUBDIR) $(DOTDOT) lib ] ;
SubDirSysHdrs [ FDirName $(SUBDIR) $(DOTDOT) ] ;
SubDirSysHdrs [ FDirName $(HAIKU_TOP) headers ] ;

local diffutils_rsrc = [ FGristFiles diffutils.rsrc ] ;
ResComp $(diffutils_rsrc) : [ FGristFiles diffutils.rdef ] ;

BinCommand diff : 
  	analyze.c 
  	context.c 
  	diff.c 
  	dir.c 
  	ed.c 
  	ifdef.c 
  	io.c 
  	normal.c 
  	side.c 
  	util.c 
  	version.c 
  	: libdiffutils.a 
  	: diffutils.rsrc ;

BinCommand diff3 : 
	diff3.c 
	version.c 
	: libdiffutils.a
	: diffutils.rsrc ;
	
BinCommand cmp : 
	cmp.c 
	version.c 
	: libdiffutils.a
	: diffutils.rsrc ;

BinCommand sdiff :
	sdiff.c
	version.c
	: libdiffutils.a
	: diffutils.rsrc ;

