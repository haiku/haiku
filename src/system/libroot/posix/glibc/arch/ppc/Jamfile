	e_rem_pio2f.c
	e_remainder.c e_remainderf.c # e_remainderl.c
	e_scalb.c e_scalbf.c # e_scalbl.c
	e_sinh.c e_sinhf.c # e_sinhl.c
	k_cos.c k_cosf.c
	k_sin.c k_sinf.c
	k_rem_pio2.c k_rem_pio2f.c # k_rem_pio2l.c
