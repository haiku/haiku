	s_signgam.c
	s_sin.c s_sinf.c # s_sinl.c
	s_sincos.c s_sincosf.c
	s_tan.c s_tanf.c
	s_tanh.c s_tanhf.c
	s_trunc.c s_truncf.c
	t_exp.c
	w_acos.c w_acosf.c # w_acosl.c
