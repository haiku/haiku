SubDir HAIKU_TOP src system libroot posix locale ;

UsePrivateHeaders
	[ FDirName libroot ]
	[ FDirName libroot locale ]
	[ FDirName libroot time ]
	[ FDirName system ]
	;

local architectureObject ;
for architectureObject in [ MultiArchSubDirSetup ] {
	on $(architectureObject) {
		local architecture = $(TARGET_PACKAGING_ARCH) ;

		MergeObject <$(architecture)>posix_locale.o :
			ctype.cpp
			ctype_l.cpp
			ctype_loc_thread.cpp
			LocaleBackend.cpp
			LocaleData.cpp
			LocaleDataBridge.cpp
			LocaleInternal.cpp
			locale_t.cpp
			localeconv.cpp
			nl_langinfo.cpp
			setlocale.cpp
			wctype_l.cpp
			wctype.cpp
			;

		MergeObject <$(architecture)>ctype_loc_global.o :
			ctype_loc_global.cpp
			;
	}
}
