local arch_sources ;
# Use the faster GL API dispatching assembly code for the platform, if any!
if $(TARGET_ARCH) = x86 {
	arch_sources = glapi_x86.S ;
} else if $(TARGET_ARCH) = sparc {
	arch_sources = glapi_sparc.S ;
} else {
	arch_sources = ;
}

MergeObject <mesa>glapi-dispatching.o :

	glapi.c
	glapi_getproc.c
	glthread.c

	$(arch_sources)
;

