	jcomapi.c
	jcparam.c
	jcphuff.c
	jcpred.c
	jcprepct.c
	jcsample.c
	jcscale.c
	jcshuff.c
	jctrans.c
	jdapimin.c
	jdapistd.c
	jdatadst.c
	jdatasrc.c
	jdcoefct.c
	jdcolor.c
	jddctmgr.c
	jddiffct.c
	jdhuff.c
