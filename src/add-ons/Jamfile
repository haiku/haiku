SubDir OBOS_TOP src add-ons ;

KernelLd
	zero
	:
	<$(SOURCE_GRIST)!kernel!drivers!common>zero.o
	kernel.so
	:
	$(OBOS_TOP)/src/kernel/ldscripts/$(OBOS_ARCH)/add-on.ld
	:
	-Bdynamic -shared
	:
	:
	drivers/dev/zero
	; 

