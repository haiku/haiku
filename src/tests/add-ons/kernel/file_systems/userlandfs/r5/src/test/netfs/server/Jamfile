SEARCH_SOURCE += [ FDirName $(userlandFSTop) src shared ] ;
SEARCH_SOURCE += [ FDirName $(userlandFSTop) src test netfs shared ] ;

DEFINES += USER=1 ;
DEFINES += DEBUG_APP="\\\"NetFSServer\\\"" ;

