SubDir HAIKU_TOP src tests system libroot posix ;

SetSubDirSupportedPlatforms libbe_test ;
UsePrivateHeaders syslog_daemon ;

SimpleTest SyslogTest
	: SyslogTest.cpp syslog.cpp
	;

SimpleTest flock_test
	: flock_test.cpp
	;

SimpleTest setjmp_test
	: setjmp_test.c
	;

# Tell Jam where to find these sources
SEARCH on [ FGristFiles
		syslog.cpp
	] = [ FDirName $(HAIKU_TOP) src system libroot posix ] ;

SubInclude HAIKU_TOP src tests system libroot posix bonnie ;
SubInclude HAIKU_TOP src tests system libroot posix math ;
