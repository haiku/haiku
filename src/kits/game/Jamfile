SubDir HAIKU_TOP src kits game ;

AddSubDirSupportedPlatforms libbe_test ;

UsePrivateHeaders app ;
UsePrivateHeaders interface ;
UsePrivateHeaders input ;

SubDirSysHdrs $(SUBDIR) ;


if $(TARGET_PLATFORM) = haiku {
	local architectureObject ;
	for architectureObject in [ MultiArchSubDirSetup ] {
		on $(architectureObject) {
			SharedLibrary [ MultiArchDefaultGristFiles libgame.so ] :
				# Public Game Kit
				DirectWindow.cpp
				WindowScreen.cpp
				GameSound.cpp
				SimpleGameSound.cpp
				FileGameSound.cpp
				PushGameSound.cpp
				StreamingGameSound.cpp

				# Internal Functionality
				GameProducer.cpp
				GameSoundBuffer.cpp
				GameSoundDevice.cpp
				GSUtility.cpp
				: be media [ TargetLibsupc++ ]
				;
		}
	}
} else if $(TARGET_PLATFORM) = libbe_test {

	SharedLibrary libgame.so :
		DirectWindow.cpp
		WindowScreen.cpp
		: be [ TargetLibstdc++ ]
	;

	HaikuInstall install-test-apps : $(HAIKU_APP_TEST_LIB_DIR) : libgame.so
		: tests!apps ;
}
