	# AddDirectoryToHaikuImage <directoryTokens> : <attributeFiles>

	return [ AddDirectoryToContainer $(HAIKU_IMAGE_CONTAINER_NAME)
		: $(directoryTokens) : $(attributeFiles) ] ;
}

