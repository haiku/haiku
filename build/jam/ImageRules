	# AddFilesToHaikuImage <directory> : <targets> : [ <destName> ]
	#	: [ <flags> ]

	AddFilesToContainer $(HAIKU_IMAGE_CONTAINER_NAME) : $(directory)
		: $(targets) : $(destName) : $(flags) ;
}

