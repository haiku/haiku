		AddSymlinkToHaikuImage common bin : /boot/common/bin/jamvm : java ;
		InstallOptionalHaikuImagePackage
			ecj-3.6.2-haiku-2011-06-08.zip
			: $(baseURL)/ecj-3.6.2-haiku-2011-06-08.zip ;
